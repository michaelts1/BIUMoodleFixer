{
	"files": [
		"src/content/index.ts",
		"src/options/options.ts",
	],
	"compilerOptions": {
		"allowImportingTsExtensions": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "Bundler",
		"noEmit": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"removeComments": false,
		"skipLibCheck": true,
		"strict": true,
		"target": "es2024",
	},
}
